<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="fileReader" class="com.ipn.reader.impl.FileReaderImpl" >
            <constructor-arg value="${file-name}" />
	</bean>
	
	<bean name="ftpReader" class="com.ipn.reader.impl.FtpReaderImpl" >
            <property name = "host" value = "${ftp-host}"/>
            <property name = "port" value = "${ftp-port}"/>
	</bean>
        
        <bean name="numberReader" class="com.ipn.reader.impl.NumberReader">
            <constructor-arg value="${number-value}" />
        </bean>
		
	<bean name="readerService" class="com.ipn.service.ReaderService" >
            <property name="reader" ref="ftpReader" />
	</bean>
        
        <bean id="placeholderConfig"
              class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
            <property name="location" value="classpath:reader-beans.properties" />
        </bean>
            
        <!-- ConfiguraciÃ³n para data source -->
        
        <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
            <property name="driverClassName" value="${jdbc.driver}"/>
            <property name="url" value="${jdbc.url}"/>
            <property name="username" value="${jdbc.username}"/>
            <property name="password" value="${jdbc.password}"/>
        </bean>
        
         <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
            <property name="dataSource" ref="dataSource"/>
        </bean>
        
        <bean id="productoDao" class="com.ipn.dao.impl.ProductoDAOImpl">
            <property name="jdbcTemplate" ref="jdbcTemplate"/>
        </bean>


</beans>
